rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{path=**}/likes/{uid} {
      allow read: if request.auth != null;
    }

    match /destinations/{destId} {
      allow get:  if true;
      allow list: if true;
      allow create: if request.auth != null;

      allow update: if request.auth != null
                                  && resource.data.authorId == request.auth.uid
                                  && request.resource.data.authorId == resource.data.authorId;

      allow delete: if request.auth != null
                          && resource.data.authorId == request.auth.uid;

           match /likes/{uid} {
              allow get, list: if true;


              allow create: if request.auth != null
                            && request.auth.uid == uid
                            && !exists(/databases/$(database)/documents/destinations/$(destId)/likes/$(uid));

              allow delete: if request.auth != null
                            && request.auth.uid == uid
                            && exists(/databases/$(database)/documents/destinations/$(destId)/likes/$(uid));

              allow update: if false;
            }
    }

    match /users/{uid} {
        allow create: if request.auth != null
        && request.auth.uid == uid;

         allow get, update, delete: if request.auth != null
                                         && request.auth.uid == uid;

                match /wantToVisit/{destId} {
                  allow read:   if request.auth != null && request.auth.uid == uid;
                  allow create: if request.auth != null
                                && request.auth.uid == uid
                                && !exists(/databases/$(database)/documents/users/$(uid)/wantToVisit/$(destId));
                  allow delete: if request.auth != null
                                && request.auth.uid == uid
                                && exists(/databases/$(database)/documents/users/$(uid)/wantToVisit/$(destId));
                  allow update: if false;
                }
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}