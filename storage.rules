
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /destinations/{uid}/{fileName=**} {
      // anyone can read images (they're referenced by public URLs in Firestore)
      allow read: if true;

      // only the authenticated owner can write under their UID
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
